<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.veiljoy.veil">
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    <application
        android:name=".android.BaseApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:windowSoftInputMode="adjustPan"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.veiljoy.veil.activity.ActivityHome"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ActivityChat" />
        <activity android:name=".activity.ActivityWelcome" />
        <activity android:name=".activity.ActivityRegister"
            android:windowSoftInputMode="adjustPan"
            />

    </application>

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />


</manifest>
